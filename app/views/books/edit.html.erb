<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <% if @book.errors.any? %>
        <%= @book.errors.count %>件のerrorが発生しました
       <ul>
        <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
        <% end %>
       </ul>
        <% end %>
    <h2>Editing Book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
        <label for="user_name">Title</label><br>
         <%= f.text_area :title %>
        </div>
        <div class="form-group">
        <label for="books_opinion">Opinion</label><br>
        <%= f.text_area :body %>
        </div>
        <%= f.submit 'Update Book',class:"btn btn-success" %>
        <% end %>
        <%= link_to "Show",book_path(@book.id) %>｜
        <%= link_to "Back",books_path %>
      </div>
   </div>