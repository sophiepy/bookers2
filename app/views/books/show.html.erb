             <td><%= link_to 'destroy',book_path(@book.id),method: :delete,"data-confirm" => "本当に削除しますか？",class:"btn-danger" %></td>
            
           </tr>
           
           
             </td>
           </tr>
      </table>
      
      
      </div>






